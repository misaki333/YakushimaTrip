<div class="post_form">
	<%= form_for(@post) do |f| %>

		<%= f.fields_for :post_images do |post_image| %>
		<%= render 'post_image_fields', f: post_image %>
		<div>
			<%= link_to_add_association '画像の追加',f, :post_images %>
		</div>
		<% end %>


		<div class="date_input">
			<%= f.text_field :visit_date, class:"form-control datetimepicker-input", data: {toggle: "datetimepicker", target: ".datetimepicker-input"}, placeholder: "YYYY/MM/DD" %>
				<script type="text/javascript">
					$(function () {
						$(".datetimepicker-input").datetimepicker({
						format:'YYYY/MM/DD'
						});
					});
				</script>
		</div>

		<div class="post_impression">
			<%= f.text_area :impression %>
		</div>

		<%= f.submit "登録", class:"btn btn-primary" %>

	<% end %>
</div>

