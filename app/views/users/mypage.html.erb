  <div class=" user_menu">
    <%= link_to edit_user_path(@user.id), class: 'mypage_button' do %>
      <i class="fas fa-user-alt" style="font-size: 60px"></i>
    <% end %>

    <%= link_to new_post_path, class: 'mypage_button' do %>
      <i class="fas fa-pen" style="font-size: 60px"></i>
    <% end %>

    <%= link_to edit_user_path(@user.id), class: 'mypage_button' do %>
      <i class="far fa-heart" style="font-size: 60px"></i>
    <% end %>
  </div>

  <div  class="phots">
    <% @posts.each do |post| %>
      <div  class="phot">
        <% post.post_images.each do |image| %>
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag image, :image, :fill, 200, 150 %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>