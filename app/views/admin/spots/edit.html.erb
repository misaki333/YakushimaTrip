<h2>観光地の編集</h2>

<%= form_for (@spot), url: admin_spot_path do |f| %>
	<div>画像</div>
	<%= attachment_image_tag @item, :image_id, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
	<%= f.attachment_field :image %>

	<label>観光地名</label>
	<%= f.text_field :name, autofocus:true %>

	<label>住所</label>
	<%= f.text_field :address %>

  <label>ジャンル</label>
	<%= f.text_field :category_id, value:@spot.category.name %>

	<%= f.submit "更新", class:'button' %>

<% end %>
<%= link_to "削除", admin_spot_path, method: :delete, class: 'btn btn-denger', data:
 { confirm: "本当に削除しますか？",
	 cancel: "戻る",
	 commit: "削除"}, title:"削除の確認" %>
