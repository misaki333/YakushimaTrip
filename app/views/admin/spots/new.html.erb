<h2>観光地の登録</h2>

<%= form_for @spot, url:admin_spot_path do |f| %>
	<label>画像</label>
	<%= attachment_image_tag @item, :image_id, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
	<%= f.attachment_field :image %>

	<label>観光地名</label>
	<%= f.text_field :name, autofocus:true %>

	<label>住所</label>
	<%= f.text_field :address %>

  <label>ジャンル</label>
	<%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "選択してください" %>
	<%= link_to "登録", new_admin_category_path %>

	<label>説明</label>
	<%= f.text_area :content %>

	<%= f.submit "登録", class:'button btn btn-success' %>

<% end %>

