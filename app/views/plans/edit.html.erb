<div class="destination_edit">
  <%= form_for @plan do |f| %>

    <div class="plan_show">
      <div class="plan_show_name">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="plan_start">
        <%= f.text_field :start_date, class:"form-control datetimepicker-input", data: {toggle: "datetimepicker", target: ".datetimepicker-input"} %>
      </div>
      <div class="plan_text">
        〜
      </div>
      <div class="plan_end">
        <%= f.text_field :end_date, class:"form-control datetimepicker-input", data: {toggle: "datetimepicker", target: ".datetimepicker-input"} %>
      </div>
    </div>

    <div class="destination_form">
      <%= render 'form', destination: @destination,f:f %>
    </div>

    <div class="destination_submit">
      <%= f.submit "保存", class: "btn btn-success" %>
    </div>

  <% end %>
</div>